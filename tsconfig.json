{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"lib": ["esnext", "dom"],
        "esModuleInterop": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceRoot": "./"
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
